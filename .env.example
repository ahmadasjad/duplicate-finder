# Logging Configuration
LOG_LEVEL=INFO  # Available: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Cloud Storage API Credentials
GOOGLE_DRIVE_API_KEY=your_api_key_here
GOOGLE_DRIVE_CLIENT_ID=your_client_id_here
ONEDRIVE_CLIENT_ID=your_client_id_here
DROPBOX_APP_KEY=your_app_key_here

# File Size Limits (in MB)
MAX_PREVIEW_SIZE_IMAGES=50
MAX_PREVIEW_SIZE_DOCUMENTS=100
MAX_PREVIEW_SIZE_VIDEOS=500
MAX_PREVIEW_SIZE_AUDIO=100

# Feature Flags
ENABLE_CLOUD_STORAGE=true
ENABLE_VIDEO_PREVIEW=false
ENABLE_AUDIO_PREVIEW=false

# Application Settings
DEBUG_MODE=false
TEMP_FILES_PATH=/tmp/duplicate-finder
